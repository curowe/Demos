<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.rowe.demos">
    
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ClickActivity" />
        <activity android:name=".HellosActivity"/>
        <activity android:name=".ViewsActivity"/>
        <activity android:name=".DialerActivity"/>
        <activity android:name=".SmsSenderActivity"/>


    </application>

</manifest>
